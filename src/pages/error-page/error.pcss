.error {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;

  &__container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  &__error {
    font-size: 40px;
    margin: 0;
    font-weight: 500;
    line-height: 40px;
    padding-bottom: 20px;
  }

  &__description {
    font-size: 20px;
    line-height: 20px;
    padding-bottom: 69px;
  }
}
