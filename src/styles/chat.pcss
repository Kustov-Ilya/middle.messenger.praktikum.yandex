.chat {
  display: flex;

  width: 100%;
  height: 100%;

  &__sidebar-container {
    @mixin flex-column;

    width: 25%;
    height: 100%;
    background-color: var(--side-part-color);
    border-right: 1px solid var(--gray-color);
  }
  &__chat-container {
    @mixin flex-column;
    flex-grow: 1;


    height: 100%;
  }
}
